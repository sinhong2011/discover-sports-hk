# OpenPanData API Configuration
# These credentials are required for the app to authenticate with the sports data API

# Cloudflare Worker API
WORKER_API_BASE_URL=https://openpandata-worker.openpandata.workers.dev
WORKER_API_KEY=your_worker_api_key_here
WORKER_API_TIMEOUT=15000
WORKER_API_RETRY_ATTEMPTS=3

# Backend API
BACKEND_API_BASE_URL=https://api.openpandata.com
BACKEND_API_KEY=your_backend_api_key_here
BACKEND_API_TIMEOUT=20000
BACKEND_API_RETRY_ATTEMPTS=3

# App Authentication
APP_SIGNATURE=your_app_signature_here
BACKEND_APP_SIGNATURE=your_backend_app_signature_here

# App Configuration
BUNDLE_ID=com.openpandata.discoversportshk
DEFAULT_API=worker
DATA_CACHE_TTL=1800000


# EAS Build Configuration (for CI/CD)
EXPO_ASC_API_KEY_ID=your_api_key_id
EXPO_ASC_API_ISSUER_ID=your_issuer_id
EXPO_APPLE_TEAM_ID=your_apple_team_id
EXPO_APPLE_TEAM_TYPE=INDIVIDUAL
