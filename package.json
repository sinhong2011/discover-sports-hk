  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "postinstall": "patch-package",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "i18n:extract": "lingui extract",
    "i18n:compile": "lingui compile",
    "i18n:extract-compile": "lingui extract && lingui compile",
    "release:check": "git log --oneline $(git describe --tags --abbrev=0 2>/dev/null || echo 'HEAD~10')..HEAD",
    "release:preview": "echo 'Release PRs are created automatically by release-please. Check: bun run release:check'",
    "release:status": "gh pr list --label 'autorelease: pending' --json number,title,url",
    "release:help": "echo 'Releases are managed by release-please. See docs/RELEASE-PLEASE-GUIDE.md for details'",
    "build:dev": "eas build --profile development",
    "build:preview": "eas build --profile preview",
    "build:test": "eas build --profile test",
    "build:prod": "eas build --profile production",
    "build:testflight": "eas build --profile testflight",
    "submit:prod": "eas submit --profile production",
    "submit:testflight": "eas submit --profile testflight",
    "setup-release": "node ./scripts/setup-release.js",
    "analyze-bundle-size": "EXPO_ATLAS=true expo start --no-dev --minify"
